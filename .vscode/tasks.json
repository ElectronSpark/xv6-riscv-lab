{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "configure cmake",
            "type": "shell",
            "command": "/bin/bash",
            "args": [
                "-c",
                "rm -rf ${workspaceFolder}/build; mkdir -p ${workspaceFolder}/build; cd ${workspaceFolder}/build; cmake .."
            ],
            "problemMatcher": [],
            "options": {
                "env": {
                    "LAB": "util",
                },
                "cwd": "${workspaceFolder}/"
            }
        },
        {
            "label": "compile xv6 and run in debug mode",
            "type": "shell",
            "command": "make",
            "isBackground": true,
            "args": [
                "-j16",
                "qemu-gdb"
            ],
            "problemMatcher": {
                "owner": "custom",
                "fileLocation": "relative",
                "pattern": {
                    "regexp": "^.*$",
                },
                // Minimal matcher (never matches) so the object is valid
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".*In lab: .*",
                    "endsPattern": ".*Now run gdb in another window.*"
                }
            },
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "dependsOn": [
                "configure cmake"
            ]
        }
    ]
}